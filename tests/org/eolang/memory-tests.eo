+package org.eolang
+alias stdout org.eolang.io.stdout
+alias sprintf org.eolang.txt.sprintf
+junit

[] > writes-into-memory
  memory > x
  and. > @
    x.write 10
    x.eq 10

[] > double-writes
  memory > m
  and. > @
    m.write "Hello, world!"
    m.write 42
    m.eq 42

[] > rewrites-and-increments-itself
  memory > m
  and. > @
    m.write 1
    m.write (m.add 5)
    m.eq 6

[] > memory-in-outer-scope
  [] > outer
    memory > x
  outer > a
  seq > @
    a.x.write 1
    stdout
      sprintf
        "%d"
        a.x

